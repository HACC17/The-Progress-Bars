<div id="drill-down" style="min-width: 310px; max-width: 600px; height: 400px; margin: 0 auto"></div>

<script>
// Create the chart
Highcharts.chart('drill-down', {
    chart: {
        type: 'pie'
    },
    title: {
        text: 'Drill Down Chart Example'
    },
    subtitle: {
        text: 'Click the slices to drill down. Source: netmarketshare.com.'
    },
    plotOptions: {
        series: {
            dataLabels: {
                enabled: true,
                format: '{point.name}: {point.y:.1f}'
            }
        }
    },

    tooltip: {
        headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
        pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}<br/>'
    },
    series: [{
        name: 'Strategic Priorities',
        colorByPoint: true,
        data: [
		<% index = 0
	while index < @uPriorities.length - 1 %>
		{
			name: '<%= raw @uPriorities[index] %>',
			y: <%= raw @sumPriorities[index] %>,
			drilldown: '<%= raw @uPriorities[index] %>'
	    },
		<% index = index + 1 %>
	<% end %>
	{
        name: '<%= raw @uPriorities[index] %>',
        y: <%= raw @sumPriorities[index] %>,
		drilldown: '<%= raw @uPriorities[index] %>'
    }
		]
    }],
    drilldown: {
        series: [
		<% index = 0
	while index < @uPriorities.length - 1%>
		{
			name: '<%= raw @uPriorities[index] %>',
			id: '<%= raw @uPriorities[index] %>',
			data: [
				<% innerIndex = 0
				while innerIndex < @amountPerYearByPriority.length - 1 %>
					['<%= raw @uYears[innerIndex] %>', <%= raw @amountPerYearByPriority[index][innerIndex] %>],
					<% innerIndex = innerIndex + 1 %>
				<% end %>
				['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByPriority[index][innerIndex] %>]
			]
	    },
		<% index = index + 1 %>
	<% end %>
		{
			name: '<%= raw @uPriorities[index] %>',
			id: '<%= raw @uPriorities[index] %>',
			data: [
				<% innerIndex = 0
				while innerIndex < @amountPerYearByPriority.length - 1 %>
					['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByPriority[index][innerIndex] %>],
					<% innerIndex = innerIndex + 1 %>
				<% end %>
				['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByPriority[index][innerIndex] %>]
			]
	    }
		]
    }
});
</script>