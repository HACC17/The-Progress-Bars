<div id="drill-down" style="min-width: 310px; max-width: 600px; height: 400px; margin: 0 auto"></div>
<button id="by-location">By Location</button>
<button id="by-priority">By Strategic Priority</button><br/>

<script>

var priority = true;
// Create the chart
var drillDownChart = Highcharts.chart('drill-down', {
    chart: {
        type: 'pie'
    },
    title: {
        text: 'Grant funding by Strategic Priority'
    },
    subtitle: {
        text: 'Click the slices to drill down. Source: netmarketshare.com.'
    },
    plotOptions: {
        series: {
            dataLabels: {
                enabled: true,
                format: '{point.name}: {point.y:.1f}'
            }
        }
    },

    tooltip: {
        headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
        pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.2f}<br/>'
    },
    series: [{
        name: 'Strategic Priorities',
        colorByPoint: true,
        data: [
		<% index = 0
	while index < @uPriorities.length - 1 %>
		{
			name: '<%= raw @uPriorities[index] %>',
			y: <%= raw @sumPriorities[index] %>,
			drilldown: '<%= raw @uPriorities[index] %>'
	    },
		<% index = index + 1 %>
	<% end %>
	{
        name: '<%= raw @uPriorities[index] %>',
        y: <%= raw @sumPriorities[index] %>,
		drilldown: '<%= raw @uPriorities[index] %>'
    }
		]
    }],
    drilldown: {
        series: [
		<% index = 0
	while index < @uPriorities.length - 1%>
		{
			name: '<%= raw @uPriorities[index] %>',
			id: '<%= raw @uPriorities[index] %>',
			data: [
				<% innerIndex = 0
				while innerIndex < @amountPerYearByPriority[index].length - 1 %>
					['<%= raw @uYears[innerIndex] %>', <%= raw @amountPerYearByPriority[index][innerIndex] %>],
					<% innerIndex = innerIndex + 1 %>
				<% end %>
				['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByPriority[index][innerIndex] %>]
			]
	    },
		<% index = index + 1 %>
	<% end %>
		{
			name: '<%= raw @uPriorities[index] %>',
			id: '<%= raw @uPriorities[index] %>',
			data: [
				<% innerIndex = 0
				while innerIndex < @amountPerYearByPriority[index].length - 1 %>
					['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByPriority[index][innerIndex] %>],
					<% innerIndex = innerIndex + 1 %>
				<% end %>
				['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByPriority[index][innerIndex] %>]
			]
	    }
		]
    }
});

$('#by-location').click(function (e) {
drillDownChart.update({
       title: {
        text: 'Grant funding by Location'
		}
    });
	
	var newSeries = [{
        name: 'Grant funding by Location',
        colorByPoint: true,
        data: [
		<% index = 0
	while index < @uLocations.length - 1 %>
		{
			name: '<%= raw @uLocations[index] %>',
			y: <%= raw @sumLocations[index] %>,
			drilldown: '<%= raw @uLocations[index] %>'
	    },
		<% index = index + 1 %>
	<% end %>
	{
        name: '<%= raw @uLocations[index] %>',
        y: <%= raw @sumLocations[index] %>,
		drilldown: '<%= raw @uLocations[index] %>'
    }
		]
    }];
	
	for (var i = drillDownChart.series.length-1; i>=0; i--) {
            drillDownChart.series[i].remove();
        }
        for (var y = newSeries.length-1; y >= 0; y--) {
            drillDownChart.addSeries(newSeries[y]);
        }
		
	var newDrilldown = [{
	series: [
		<% index = 0
	while index < @uLocations.length - 1%>
		{
			name: '<%= raw @uLocations[index] %>',
			id: '<%= raw @uLocations[index] %>',
			data: [
				<% innerIndex = 0
				while innerIndex < @amountPerYearByLocation[index].length - 1 %>
					['<%= raw @uYears[innerIndex] %>', <%= raw @amountPerYearByLocation[index][innerIndex] %>],
					<% innerIndex = innerIndex + 1 %>
				<% end %>
				['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByLocation[index][innerIndex] %>]
			]
	    },
		<% index = index + 1 %>
	<% end %>
		{
			name: '<%= raw @uLocations[index] %>',
			id: '<%= raw @uLocations[index] %>',
			data: [
				<% innerIndex = 0
				while innerIndex < @amountPerYearByLocation[index].length - 1 %>
					['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByLocation[index][innerIndex] %>],
					<% innerIndex = innerIndex + 1 %>
				<% end %>
				['<%= raw @uYears[innerIndex] %>', <%= @amountPerYearByLocation[index][innerIndex] %>]
			]
	    }
		]
    }];
	alert(newDilldown.series.length);
	for (var i = drillDownChart.options.drilldown.series.length-1; i>=0; i--) {
            drillDownChart.options.drilldown.series[i].remove();
        }
        for (var y = newDrillDown.series.length-1; y >= 0; y--) {
            drillDownChart.options.drilldown.addSeries(newDilldown.series[y]);
        }
	drillDownChart.redraw();
});

